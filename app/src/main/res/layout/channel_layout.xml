<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/deepBlue"
    app:cardCornerRadius="6dp"
    android:layout_margin="5dp"
    android:minWidth="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minWidth="200dp">

            <me.subhrajyoti.myday.HubblerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAllCaps="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="30dp"
                tools:text="52 members"
                android:textColor="@color/colorWhite"
                android:id="@+id/channelNameTextView"
                />

            <View
                android:layout_width="match_parent"
                android:minWidth="200dp"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/channelViewDivider" />

            <me.subhrajyoti.myday.HubblerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                tools:text="10 members"
                android:textColor="@color/colorWhite"
                android:id="@+id/memberCountTextView"/>
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joinChannelButton"
            android:text="Join"
            android:textColor="@color/colorWhite"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textAllCaps="true"
            android:padding="10dp"
            android:minHeight="0dp"
            android:background="@drawable/rounded_corner_button"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>