<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="140dp"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@color/colorDeepBlue"
    card_view:cardCornerRadius="4dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minWidth="160dp">

            <me.subhrajyoti.myday.views.SemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="30dp"
                tools:text="52 members"
                android:textColor="@color/colorWhite"
                android:id="@+id/channelNameTextView"
                />

            <View
                android:layout_width="match_parent"
                android:minWidth="180dp"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:alpha="0.2"
                android:background="@android:color/darker_gray"
                android:id="@+id/channelViewDivider" />

            <me.subhrajyoti.myday.views.HubblerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                tools:text="10 members"
                android:textColor="@color/colorWhite"
                android:id="@+id/memberCountTextView"/>
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joinChannelButton"
            android:text="Join"
            android:textColor="@color/colorWhite"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textAllCaps="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:minHeight="0dp"
            app:backgroundTint="@color/colorCyanBlue"
            android:background="@drawable/rounded_corner_button"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>