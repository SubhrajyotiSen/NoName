<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPortage">

    <me.subhrajyoti.myday.views.HubblerBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:text="Thought of the day"/>

    <me.subhrajyoti.myday.views.HubblerTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:paddingEnd="30dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/thought_textView"/>
    
    <me.subhrajyoti.myday.views.SemiBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/speaker_textView"/>

</LinearLayout>