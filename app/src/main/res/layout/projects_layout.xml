<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <me.subhrajyoti.myday.views.HubblerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_textView"
            android:text="Project:"
            android:textAllCaps="true"/>

        <me.subhrajyoti.myday.views.HubblerBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_name_textView"
            android:textAllCaps="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <me.subhrajyoti.myday.views.HubblerBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_progress"
                android:textSize="25sp"
                android:paddingTop="15dp"
                android:layout_alignParentStart="true"/>

            <me.subhrajyoti.myday.views.HubblerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasks Complete"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

        <ProgressBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/project_progressBar"
            android:paddingBottom="10dp"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"/>

        <me.subhrajyoti.myday.views.HubblerBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deadline_days"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_marginBottom="5dp"/>


    </LinearLayout>
</android.support.v7.widget.CardView>
